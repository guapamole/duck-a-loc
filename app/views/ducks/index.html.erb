
<div class="container m-3">

  <div>
    <h1>Bienvenue sur <em>Duck-a-Loc!</em></h1>
    <h2>Le site numéro un de location de canard en plastique</h2>
  </div>

  <div class="row">
    <div class="col">
      <p>Veuillez sélectionner un canard à louer</p>
        <div class="duck_grid">
          <% @ducks.each do |duck| %>
            <%= link_to duck_path(duck) do %>
              <div class="card">
                <%= cl_image_tag duck.photo.key, class: "card-img-top", alt: duck.title %>
                  <div class="card-body">
                    <h2 class="card-title"><%= duck.title %></h2>
                    <p class="card-text"><%= duck.description %></p>
                    <p class="card-text"><strong>Price: <%= number_to_currency(duck.price) %></strong></p>
                  </div>
              </div>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>

</div>
