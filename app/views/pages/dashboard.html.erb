                              <div class="col destroy text-end">
                              <%= link_to "Annuler",
                                booking_path(booking), class: "text-danger",
                                data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
                              </div>
                              </div>
                            </div>
                          </div>
                        </div>
              <% end %>
          </div>
        </div>


    </div>
